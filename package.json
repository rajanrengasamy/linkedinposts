{
  "name": "linkedin-post-generator",
  "version": "1.0.0",
  "description": "CLI tool that generates shareable LinkedIn posts from web sources with full provenance tracking",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "linkedin-post": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajanrengasamy/linkedinposts.git"
  },
  "keywords": [
    "linkedin",
    "content-generation",
    "cli",
    "ai",
    "social-media"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rajanrengasamy/linkedinposts/issues"
  },
  "homepage": "https://github.com/rajanrengasamy/linkedinposts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "openai": "^6.15.0",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
